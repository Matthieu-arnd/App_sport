<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:layout_width = "match_parent"
            android:layout_height="wrap_content"
            android:text=" Page d'acceuil "
            android:textColor=" #5dade2 "
            android:gravity="center"
            android:textSize="25sp"

            />



    </LinearLayout>

    <Button
        android:id="@+id/creation"
        android:layout_width="236dp"
        android:layout_height="107dp"
        android:layout_alignParentRight="True"
        android:layout_alignParentBottom="True"
        android:layout_marginRight="90dp"
        android:layout_marginBottom="500dp"
        android:gravity="center"
        android:onClick="creation"
        android:text="Creer ta séance"

        />
    <Button
        android:id="@+id/seance"
        android:layout_width="236dp"
        android:layout_height="107dp"
        android:layout_alignParentRight="True"
        android:layout_alignParentBottom="True"
        android:layout_marginRight="90dp"
        android:layout_marginBottom="350dp"
        android:gravity="center"
        android:onClick="seance"
        android:text="Start ta séance"

        />
    <Button
        android:id="@+id/statistique"
        android:layout_width="236dp"
        android:layout_height="107dp"
        android:layout_alignParentRight="True"
        android:layout_alignParentBottom="True"
        android:layout_marginRight="90dp"
        android:layout_marginBottom="200dp"
        android:gravity="center"
        android:onClick="Statistique"
        android:text="Statistique"

        />
</RelativeLayout>